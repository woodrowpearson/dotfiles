# Mac-CLI Developer Aliases
# Useful shortcuts for common Mac-CLI commands

# System & Performance
alias sysinfo='mac system'
alias memcheck='mac memory'
alias cpucheck='mac cpu'
alias diskspace='mac disk:space'
alias bigfiles='mac find:biggest-files'

# Network & IP
alias iplocal='mac ip:local'
alias ippublic='mac ip:public'
alias speedtest='mac speedtest'
alias wifiinfo='mac wifi:info'

# Git shortcuts via Mac-CLI
alias gitlog='mac git:log'
alias gitbranch='mac git:create:branch'
alias gitundo='mac git:undo-commit'

# Development utilities
alias searchtext='mac find:text'
alias brewstatus='mac brew'
alias sshlist='mac ssh:list'

# System maintenance
alias updateall='mac update'  # Updates macOS, Homebrew, npm, gems
alias cleanup='mac cleanup'

# Quick system controls
alias lockscreen='mac lock'
alias sleepnow='mac sleep'
alias screensaver='mac screensaver'

# Bluetooth & Audio
alias btoff='mac bluetooth:off'
alias bton='mac bluetooth:on'
alias volume='mac volume'