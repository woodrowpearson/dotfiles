# Zigbee2MQTT Configuration
# Generated by Ansible

homeassistant: true

permit_join: false

mqtt:
  base_topic: zigbee2mqtt
  server: 'mqtt://mosquitto:{{ mqtt_port }}'
  user: {{ mqtt_user }}
  password: {{ mqtt_password | default('homeassistant123') }}

serial:
  port: {{ zigbee2mqtt_device }}
  adapter: auto

frontend:
  port: 8080
  host: 0.0.0.0

advanced:
  log_level: info
  pan_id: 0x1a62
  channel: 11
  network_key: GENERATE
  homeassistant_legacy_entity_attributes: false
  legacy_api: false
  legacy_availability_payload: false

device_options:
  legacy: false

experimental:
  new_api: true