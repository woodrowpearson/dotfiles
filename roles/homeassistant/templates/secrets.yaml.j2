# HomeAssistant Secrets
# Generated by Ansible - DO NOT EDIT MANUALLY

# Database
db_url: "postgresql://{{ homeassistant_db_user }}:{{ homeassistant_db_password }}@{{ homeassistant_db_host }}:{{ homeassistant_db_port }}/{{ homeassistant_db_name }}"

# MQTT
mqtt_password: "{{ mqtt_password | default('homeassistant123') }}"

# Location (customize these)
home_latitude: 37.7749
home_longitude: -122.4194

# External URLs
external_url: "{{ homeassistant_external_url }}"
internal_url: "{{ homeassistant_internal_url }}"

# Device IPs (examples - customize for your network)
hue_bridge_ip: "192.168.1.100"
chromecast_ip: "192.168.1.101"

# Google Assistant
google_project_id: "your-google-project-id"

# API Keys (set these during deployment)
# weather_api_key: "your-weather-api-key"
# spotify_client_id: "your-spotify-client-id"
# spotify_client_secret: "your-spotify-client-secret"