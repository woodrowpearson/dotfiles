    local domain="$1"
    local checkpoint_name="$2"
    local dry_run="$3"
    local force="$4"
    
    log "Rolling back system preferences domain: $domain"
    
    # Find checkpoint
    local checkpoint_path=""
    if [ "$checkpoint_name" = "latest" ]; then
        checkpoint_path=$(find "$CHECKPOINT_DIR" -maxdepth 1 -type d -name "*_*" | sort -r | head -1)
